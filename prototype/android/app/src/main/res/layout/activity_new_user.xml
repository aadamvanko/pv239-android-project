<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="cz.muni.fi.pv239.project.activities.ActivityNewUser">

    <TextView
        android:id="@+id/label_new_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/label_new_user_name_text"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/edit_text_new_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:textSize="24sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_new_user_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/button_new_user_ok_text"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="24sp" />

</android.support.v7.widget.LinearLayoutCompat>