<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:textAllCaps="false"
    tools:context="cz.muni.fi.pv239.project.activities.ActivityMainMenu">

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_play"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/screen_percentage_10"
        android:gravity="center_horizontal"
        android:text="@string/button_play_text"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="36sp" />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_high_scores"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/screen_percentage_10"
        android:gravity="center_horizontal"
        android:text="@string/button_high_scores_text"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="36sp" />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/button_change_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/screen_percentage_10"
        android:gravity="center_horizontal"
        android:text="@string/button_change_user_text"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textSize="36sp" />

</android.support.v7.widget.LinearLayoutCompat>